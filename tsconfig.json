{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2015",
    "lib": ["dom", "es2015"],
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "useUnknownInCatchVariables": true,
  },
  "include": [
    "src/**/*"
  ]
}