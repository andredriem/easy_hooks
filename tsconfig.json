{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "useUnknownInCatchVariables": true,
  },
  "include": [
    "src/**/*"
  ]
}